<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context="com.gdgvietnam.calculator.MainActivity">
    <TextView
        android:id="@+id/tv_title_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textSize="30sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/tv_show_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textSize="30dp"
            android:gravity="right"
            android:background="#ddcc00"
            android:layout_weight="9"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:id="@+id/btn_setting"
            android:text=":"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00cc00"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_bracket_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="("
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#cceebb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:id="@+id/btn_bracket_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#cceebb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:id="@+id/btn_all_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#cceebb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#cceebb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_n7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#eeccbb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:id="@+id/btn_n8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#eeccbb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:id="@+id/btn_n9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#eeccbb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:id="@+id/btn_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#eeccbb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_n4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#bbccbb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:id="@+id/btn_n5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#bbccbb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:id="@+id/btn_n6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#bbccbb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:id="@+id/btn_multi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#bbccbb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_n1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#00ccbb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:id="@+id/btn_n2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#00ccbb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:id="@+id/btn_n3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#00ccbb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:id="@+id/btn_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#00ccbb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#eeccbb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:id="@+id/btn_n0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#eeccbb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
        <Button
            android:id="@+id/btn_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#eeccbb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>®
        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="#eeccbb"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
</LinearLayout>